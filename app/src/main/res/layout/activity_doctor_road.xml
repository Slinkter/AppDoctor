<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Business.DoctorRoad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_map_ruta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:elevation="3dp"
            app:cardCornerRadius="10dp"
            app:cardUseCompatPadding="true">

            <fragment
                android:id="@+id/mapDoctorTracking"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".DoctorTracking">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom">

                    <Button
                        android:id="@+id/btnSendNotiArrived"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="6dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/ic_notificacion_cliente"
                        android:enabled="false"
                        android:textColor="@color/white"
                        android:visibility="invisible" />
                </RelativeLayout>
            </fragment>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_tiempoDoctorRoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id_tiempo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minutos" />


            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id_distanciaDoctorRoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id_distancia" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distancia" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:elevation="3dp">

            <Button
                android:id="@+id/btn_ruta_cancelar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_1"
                android:elevation="5dp"
                android:text="cancelar"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>